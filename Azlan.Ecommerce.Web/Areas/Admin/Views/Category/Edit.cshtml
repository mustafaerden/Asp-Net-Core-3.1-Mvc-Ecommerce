@model CategoryModel
@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section MainTitle {
    <div class="w-sm-100 mr-auto"><h4 class="mb-0">Edit "@Model.Name" Category</h4></div>

    <ol class="breadcrumb bg-transparent align-self-center m-0 p-0">
        <li class="breadcrumb-item">
            <a asp-controller="dashboard">Dashboard</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="category" asp-action="index">Categories</a>
        </li>
        <li class="breadcrumb-item">Edit Category</li>
    </ol>
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Edit category</h4>
    </div>
    <div class="card-content">
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <form asp-controller="category" asp-action="edit" method="post">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <div class="form-group row">
                            <label asp-for="Name" class="col-sm-2 col-form-label">Category Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Name">
                                <span class="text-danger mt-5 font-italic" asp-validation-for="Name"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ParentCategoryId" class="col-sm-2 col-form-label">Parent Category</label>
                            <div class="col-sm-10">
                                <select asp-for="ParentCategoryId" class="form-control" asp-items="ViewBag.Categories">
                                    <option value="-1">No Parent Category</option>
                                </select>
                                <span class="text-danger" asp-validation-for="ParentCategoryId"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Update</button>
                                <a class="btn btn-outline-danger" asp-controller="category" asp-action="index">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.js"></script>
}
