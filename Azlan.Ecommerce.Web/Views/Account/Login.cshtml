@model UserLoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Breadcrumb Area Start-->
<div class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-content text-center">
                    <h1 class="breadmome-name">Login</h1>
                    <ul>
                        <li><a asp-controller="home" asp-action="index">Home</a></li>
                        <li class="active">Login</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Breadcrumb Area End-->

@if (TempData["message"] != null)
{
    <div class="row mt-20">
        <div class="col-6 mx-auto">
            <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                Registered successfully. You can login and start shopping now.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
}

<div class="login-area @(TempData["message"] != null ? "mt-20" : "mt-40")">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-12 col-lg-6 col-xl-6 ml-auto mr-auto">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-form">
                            <form asp-controller="account" asp-action="login" method="post">
                                <div class="bg-danger rounded mb-2 text-white text-small shadow py-3 px-1 text-center" asp-validation-summary="ModelOnly"></div>

                                <label>Email</label>
                                <span class="text-danger font-italic" asp-validation-for="Email"></span>
                                <input asp-for="Email">

                                <label>Password</label>
                                <span class="text-danger font-italic" asp-validation-for="Password"></span>
                                <input asp-for="Password" type="password">

                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input type="checkbox" asp-for="RememberMe">
                                        <label>Remember me</label>
                                        <a href="#">Forgot Password?</a>
                                    </div>
                                    <button type="submit" class="default-btn">Login</button>
                                </div>
                            </form>
                            <div class="no-account">
                                <a asp-controller="account" asp-action="register">No account? Create one here</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.js"></script>
}
